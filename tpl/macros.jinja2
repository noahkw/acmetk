{% macro account_url(obj, l=13) -%}
<a href="{{ url_for('mgmt-account', account=obj.account_of.account_id|string) }}">{{ shorten(obj.account_of.account_id|string, l=l) }}</a>
{%- endmacro %}

{% macro order_url(obj, l=13, name=None) -%}
{%- set order=obj.order_of -%}
{%- if order -%}
<a href="{{ url_for('mgmt-order', order=obj.order_of.order_id|string) }}">{{ shorten(name or obj.order_of.order_id|string, l) }}</a>
{%- else -%}
{{ obj.identity }}
{%- endif -%}
{%- endmacro %}

{% macro certificate_url(obj, l=13) -%}
<a href="{{ url_for('mgmt-certificate', certificate=obj.certificate_id|string) }}">{{ shorten(obj.certificate_id|string, l) }}</a>
{%- endmacro %}

{% macro entity_url(obj) -%}
{%- if obj.identity in ['account'] -%}
{{ account_url(obj, l=13) }}
{%- elif obj.identity in ['certificate'] -%}
{{ certificate_url(obj, l=13) }}
{%- elif obj.identity in ['order','authorization','challenge','identifier'] -%}
{{ order_url(obj.order_of, 13, shorten(obj|attr(obj.identity + '_id')|string, l=13)) }}
{%- else -%}
{{ shorten(obj.entity|attr(obj.entity.identity + '_id')|string, l=13) }}
{%- endif -%}
{%- endmacro %}

{% macro time(t, or_='-', fmt='%Y-%m-%d %H:%M %Z') -%}
{{ t.strftime(fmt) if t else or_ }}
{%- endmacro %}

{% macro shorten(s, l=7) -%}
{%- if s|length > l -%}
    {{ s[:((l-1)/2)|int] }}â€¦{{ s[(-(l-1)/2)|int:] }}
{%- else -%}
    {{ s }}
{%- endif -%}
{%- endmacro %}

{% macro paginate(p) %}
<div id="pagination">
{% if p.has_previous %}
    <a href="{{ url_for(request.match_info.route.name).with_query(request.url.update_query({'page':p.previous_page}).query) }}">&larr;</a>
{% else %}
    &larr;
{% endif %}
{{ p.current_page }}/{{ p.pages }}
{% if p.has_next %}
    <a href="{{ url_for(request.match_info.route.name).with_query(request.url.update_query({'page':p.next_page}).query) }}">&rarr;</a>
{% else %}
    &rarr;
{% endif %}
</div>
{% endmacro %}

{% macro change(c) %}
{% if c.op == 'add' %}
<li>
    + {{ c.path }} = {{ c.value }}
</li>
{% elif c.op == 'test' %}
<li>
    = {{ c.path }} == {{ c.value }}
{% elif c.op == 'replace' %}
    => {{ c.value }}
</li>
{% else %}
    {{ c.op }}
{% endif %}
{% endmacro %}
